<body>

    <h1>🍛 今日のラッキーカレー占い 🍛</h1>

    <div id="result-area">
        <p>ボタンを押して<br>今日のカレーを占おう！</p>
    </div>

    <button id="fortune-btn">今日のカレーを占う</button>

    <script>
        /*
         * --- プログラムの工夫（JavaScript） ---
         * データの管理と、ランダム表示のロジックを書いています。
         */

        // 1. カレーのデータを「配列（リスト）」で作る
        // 名前、絵文字、コメントをセットにして管理しています。
        const curryData = [
            {
                name: "ビーフカレー",
                emoji: "🍛",
                comment: "王道のコクと旨味！ガッツリ食べてパワーチャージ。"
            },
            {
                name: "バターチキンカレー",
                emoji: "🥘",
                comment: "マイルドな甘みが最高。ナンと一緒にどうぞ！"
            },
            {
                name: "グリーンカレー",
                emoji: "🌿",
                comment: "刺激的な辛さがクセになる！ココナッツの香りでリフレッシュ。"
            },
            {
                name: "キーマカレー",
                emoji: "🍖",
                comment: "ひき肉の旨味が凝縮！卵をトッピングすると運気アップかも？"
            },
            {
                name: "カツカレー",
                emoji: "🐽",
                comment: "今日は勝負の日？ボリューム満点で活力全開！"
            },
            {
                name: "シーフードカレー",
                emoji: "🦐",
                comment: "海の幸の旨味がたっぷり。ちょっと贅沢な気分になれるかも。"
            }
        ];

        // 2. HTMLの要素（部品）を取得して、変数に入れる
        const btn = document.getElementById('fortune-btn');
        const resultArea = document.getElementById('result-area');

        // 3. ボタンがクリックされた時の動作（イベントリスナー）を設定
        btn.addEventListener('click', function() {
            
            // (A) ランダムな数字を作る
            // Math.random() は 0以上1未満のランダムな数
            // curryData.length はリストの個数（今回は6個）
            // Math.floor() で小数点以下を切り捨てて、0〜5の整数を作ります。
            const randomIndex = Math.floor(Math.random() * curryData.length);

            // (B) ランダムに選ばれたカレーのデータを取得
            const luckyCurry = curryData[randomIndex];

            // (C) 結果エリアの中身（HTML）を書き換える
            // innerHTMLを使って、選ばれたカレーの情報を表示します。
            resultArea.innerHTML = `
                <div class="curry-emoji">${luckyCurry.emoji}</div>
                <div class="curry-name">✨ ${luckyCurry.name} ✨</div>
                <div class="curry-comment">${luckyCurry.comment}</div>
            `;
